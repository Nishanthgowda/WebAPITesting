<div>
    <input type="button" class="btn btn-success" value="Get Employees" id="btnGetEmployees"/>
    <input type="button" class="btn btn-secondary" value="Close" id="btnClear"/>
    <ul id="ulEmployees">
        
    </ul>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    
    $(document).ready(function () {
        var ulEmployees = $('#ulEmployees');
        $('#btnGetEmployees').click(function () {
            $.ajax({
                type: 'GET',
                url: "https://localhost:44395/api/Employee/LoadAllEmployees",
                dataType: 'json',
                success: function (data) {
                    ulEmployees.empty();
                    $.each(data, function (index, val) {
                        ulEmployees.append('<li> First Name - ' + val.FirstName + " Last Name - " + val.LastName + " Gender- " + val.Gender + '</li>');
                    });
                }
            });
        });
        $('#btnClear').click(function () {
            ulEmployees.empty();
        });
    });


</script>